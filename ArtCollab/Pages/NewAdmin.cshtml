@page
@model ArtCollab.Pages.NewAdminModel
@{
    ViewData["Title"] = "Add New Admin";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<body style="background: url('/Images/SecondBackground.png') no-repeat center center fixed; background-size: cover;">
    <div class="container mt-5">
        <div class="bg-light p-4 rounded shadow" style="max-width: 500px; margin: auto;">
            <h3 class="mb-3">Create Admin Account</h3>

            <form method="post">
                <!-- Bind ViewModel properties to the form fields -->
                <div class="mb-3">
                    <label asp-for="ViewModel.Name" class="form-label"></label>
                    <input asp-for="ViewModel.Name" class="form-control" autocomplete="username" />
                    <span asp-validation-for="ViewModel.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ViewModel.Email" class="form-label"></label>
                    <input asp-for="ViewModel.Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ViewModel.Password" class="form-label"></label>
                    <input asp-for="ViewModel.Password" type="password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ViewModel.ConfirmPassword" class="form-label"></label>
                    <input asp-for="ViewModel.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ViewModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create Admin</button>
                </div>

                <div class="text-center mt-3">
                    <a href="javascript:history.back()" class="text-decoration-none">&larr; Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
