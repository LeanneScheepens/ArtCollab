@page
@model ArtCollab.Pages.HomeModel
@{
    Layout = null;
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2 class="text-center mb-4">Home</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var artwork in Model.Artworks)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@artwork.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@artwork.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@artwork.Title</h5>
                        <p class="card-text text-truncate">@artwork.Description</p>
                        <small class="text-muted">By @artwork.Owner</small>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="#" class="btn btn-outline-dark">Next ></a>
    </div>
</div>

