@page
@model ArtCollab.Pages.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    .register-background {
        background-image: url('/Images/VoorbeeldLOGO.jpg'); /* vervang met een andere of dezelfde foto */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100vw;
    }
</style>

<div class="register-background d-flex justify-content-center pt-5">
    <div class="bg-white p-4 rounded shadow" style="width: 350px; max-width: 90%; height: 80vh; overflow: auto;">

        <div class="d-flex justify-content-between align-items-start mb-3">
            <h3 class="mb-0">Register</h3>
            <button type="button" class="btn-close" aria-label="Close" onclick="history.back();"></button>
        </div>

        <form method="post">
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input id="Username" name="Username" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input id="Email" name="Email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" required />
            </div>

            <div class="d-grid gap-2 mb-2">
                <button type="submit" class="btn btn-primary">Register</button>
                <button type="button" class="btn btn-light">Cancel</button>
            </div>
        </form>

        <p class="text-muted small mt-3">
            Already have an account?
            <a href="/Login" class="text-decoration-none fw-semibold">LOG IN</a>
        </p>
    </div>
</div>
