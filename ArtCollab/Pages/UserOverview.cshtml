@page
@model ArtCollab.Pages.Admin.UserOverviewModel
@{
    ViewData["Title"] = "User Overview";
}

<h2>User Overview</h2>

<form method="post" asp-page-handler="Delete">
    <div class="mb-3 d-flex gap-2">
        <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Search by name..." />

        <select asp-for="SelectedRole" class="form-select">
            <option value="">All Roles</option>
            <option value="Artist">Artist</option>
            <option value="Admin">Admin</option>
        </select>

        <button type="submit" formaction="?handler=Search" class="btn btn-primary">Search</button>
        <button type="submit" class="btn btn-danger">Delete Selected</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Select</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td><input type="checkbox" name="SelectedUserIds" value="@user.Id" /></td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>
</form>
