@page
@model ArtCollab.Pages.CreateEventModel
@{
    ViewData["Title"] = "Create Event";
}

<h2>Create Event</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="ViewModel.Title" class="form-control" />
        <span asp-validation-for="ViewModel.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input asp-for="ViewModel.StartDate" class="form-control" type="date" />
        <span asp-validation-for="ViewModel.StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">End Date</label>
        <input asp-for="ViewModel.EndDate" class="form-control" type="date" />
        <span asp-validation-for="ViewModel.EndDate" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="ViewModel.Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create Event</button>
</form>