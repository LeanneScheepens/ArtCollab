@page "{id:int}"
@model ArtCollab.Pages.ArtworkDetailModel
@{
    ViewData["Title"] = "Artwork Detail";
}

<div class="d-flex gap-2 mb-3">
    <a href="javascript:history.back()" class="back-icon" title="Back">
        <i class="bi bi-arrow-left-circle-fill"></i>
    </a>

    
    <form method="post" class="d-flex gap-2">
        <select asp-for="SelectedCollectionId" class="form-selectAD">
            <option value=""> Select event</option>
            @foreach (var collection in Model.UserCollections)
            {
                <option value="@collection.Id">@collection.Title</option>
            }
        </select>
        <button type="submit" class="btn btn-primaryAD">Add</button>
    </form>

    <a asp-page="/DeleteArtwork" asp-route-id="@Model.Artwork.Id" class="delete-icon" title="Delete artwork">
        <i class="bi bi-trash3-fill"></i>
    </a>


</div>

<h2>@Model.Artwork.Title</h2>

<!-- 👇 Thumbnail that opens modal -->
<img src="@Model.Artwork.ImageUrl" alt="@Model.Artwork.Title"
     class="img-fluid rounded mb-3"
     style="max-height: 400px; cursor: pointer;"
     data-bs-toggle="modal" data-bs-target="#imageModal" />

<p><strong>Owner:</strong> @Model.Artwork.Owner</p>
<p><strong>Description:</strong> @Model.Artwork.Description</p>
<p><strong>Uploaded:</strong> @Model.Artwork.UploadDate.ToString("dd-MM-yyyy")</p>

<!-- ✅ Toast Notification -->
@if (!string.IsNullOrWhiteSpace(TempData["SuccessMessage"] as string))
{
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast align-items-center text-white bg-success border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["SuccessMessage"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
}

<!-- 🔍 Modal for enlarged image -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-dark">
            <div class="modal-body p-0">
                <img src="@Model.Artwork.ImageUrl" alt="@Model.Artwork.Title" class="img-fluid w-100 rounded" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Toast & Modal Initialization -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.forEach(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            });
        });
    </script>
}